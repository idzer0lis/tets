<script>
    (function ($) {
        var toastOptions = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-bottom-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "150",
            "hideDuration": "150",
            "timeOut": "15000",
            "extendedTimeOut": "60000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };

        if (window.flashAlerts && window.flashAlerts.length) {
            $.each(window.flashAlerts, function (idx, alert) {
                var alertType = alert.type;
                if (alertType === 'danger') { alertType = 'error'; }
                if (alertType === 'warn') { alertType = 'warning'; }
                var type = typeof (toastr[alertType]) === 'function' ? alertType : 'info';
                toastr[type](alert.message, null, toastOptions);
            });
        }
    })(jQuery);
</script>
